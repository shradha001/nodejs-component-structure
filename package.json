{
  "name": "nodejs-component-structure",
  "version": "1.0.0",
  "description": "Node.JS project structure component wise.",
  "main": "src/bin/www",
  "scripts": {
    "start": "node src/bin/www",
    "dev": "NODE_ENV=development nodemon",
    "pm2": "pm2 start --name nodejs-boilerplate src/bin/www",
    "test": "mocha  src/test/index.js",
    "coverage": "./node_modules/.bin/nyc npm run test",
    "report": "./node_modules/.bin/nyc --reporter=html mocha src/test/index.js",
    "formatter": "pretty-quick --pattern 'src/**/*.*(js|jsx)'",
    "lint:fix": "eslint --ignore-path .gitignore . --fix",
    "lint": "eslint --ignore-path .gitignore .",
    "commit": "git-cz"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shradha001/nodejs-component-structure.git"
  },
  "keywords": [
    "nodejs",
    "restapi",
    "express",
    "project",
    "structure"
  ],
  "author": "shradha mallik",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shradha001/nodejs-component-structure/issues"
  },
  "homepage": "https://github.com/shradha001/nodejs-component-structure#readme",
  "dependencies": {
    "celebrate": "^10.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.0.0",
    "helmet": "^3.21.0",
    "lodash": "^4.17.21",
    "mongoose": "^5.6.13",
    "morgan": "^1.9.1",
    "swagger-ui-express": "^4.0.7",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@commitlint/prompt": "^8.2.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.9",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-mocha": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "mocha": "^6.2.0",
    "nodemon": "^2.0.2",
    "nyc": "^14.1.1",
    "pm2": "^4.2.3",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "supertest": "^4.0.2"
  }
}
